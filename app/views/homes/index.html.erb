<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Fakebook</h1>
      <h4>
      Avec Facebook, partagez et restez en contact avec votre entourage.
      </h4>
    </div>
    <div class="col-sm">
      <div class="card">
        <div class="card-body">
          <%= form_for @user, url: root_path, html: { multipart: true }  do |f| %>
            <div class="form-group">
              <%= f.text_field :username, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit 'Connexion', class:"btn btn-primary btn-lg btn-block", disable_with: 'Connecting...' %>
              <a href="#">Mot de passe oubli√©</a>
            </div>
          <% end %>

          <p class="text-center">
            OU
          </p>

          <a href="<%= new_user_path %>" class="btn btn-success btn-lg btn-block">Inscrivez-vous</a>

        </div>
      </div>
    </div>
  </div>
</div>